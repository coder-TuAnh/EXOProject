@using TeamplateHotel.Controllers
@using TeamplateHotel.Models
@using ProjectLibrary.Database
@{
    ViewBag.Title = "ListDestination";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    string lang = Request.Cookies["LanguageID"].Value;
    List<Menu> menuDes = CommentController.GetMenuDes(lang);
}

<section class="full-screen bg-tour">
    <div class="video-main ">
        <img src="~/Content/images/bg-tourstyles-lp.jpg" alt="">
        <div class="title-content-discover">
            <h1 data-effect="fadeInLeft" class="hs-line-1 animate-e nopadding">EXO Destinations..</h1>
            <h2 class="white">where will you go?</h2>
        </div>
    </div>
</section>
<section class="des-content">
