@using ProjectLibrary.Database
@using TeamplateHotel.Models
@model IEnumerable<ShowObject>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();
}
<section class="full-screen bg-tour">
    <div class="video-main ">
        <img src="~/Content/images/bg-2.jpg" alt="">
    </div>
</section>

<section class="tour-content">
    <div class="container">
        <input type="hidden" id="slugguugug" value="@ViewBag.slug" />
        <div class="row icon-between ">
            <p>
                <img src="~/Content/images/icon-menu/icon-search-catalogue.png" class="icon-our-asia" alt=" ">
            </p>
        </div>
        <div class="row mg-bt-40">
            @*<div class="col-lg-4 col-md-6 group-view">
                    <div class="button-group layout-mode-button-group" id="btnContainer">
                        <button class="btn-list-view bt-view" onclick="listView()"><i class="fas fa-list icon-view"></i>LIST VIEW</button>
                        <button class="btn-grid-view bt-view active" onclick="gridView()"><i class="fas fa-th icon-view"></i>GRID VIEW</button>
                    </div>
                </div>*@
            <div class="col-lg-5 col-md-6 groug-results">
                <div class="found"> <span class="font-16">RESULTS FOUND:</span><span class="green">@Model.Count()</span></div>
                <div class="view">
                    <span class="font-16">VIEW:</span>
                    <div class="dropdown">
                        <button onclick="myFunction()" class="dropbtn">09</button>
                        <div id="myDropdown" class="dropdown-content">
                            <ul>
                                <li><a href="#">09</a></li>
                                <li><a href="#">18</a></li>
                                <li><a href="#">27</a></li>
                                <li><a href="#">36</a></li>
                                <li><a href="#">45</a></li>
                            </ul>
                        </div>
                    </div>
                    <span class="font-16">PER PAGE</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-12">
                <div class="our_Sort">
                    <div>
                        <span>Sort by:</span>
                        <select onchange="OrderBy(value)">
                            <option value="0">Default</option>
                            <option value="1">Từ thấp đến cao</option>
                            <option value="2">Từ cao đến thấp</option>
                        </select>
                    </div>
                </div>
                @*<div class="dropdown filter-tour">
                        <button class="btn btn-secondary dropdown-toggle sort-by" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Sort by
                        </button>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">A To Z</a>
                            <a class="dropdown-item" href="#">Z to A</a>
                            <a class="dropdown-item active" href="#">Most Popular</a>
                        </div>
                    </div>*@
            </div>
        </div>
        <div class="row pd-bottom-40">
            <div class="col-lg-3 col-md-12">
                <div class="reset-op mg-bot-20">
                    <button type="button" class="btn-round btn-reset">
                        <i class="fas fa-times"></i>Reset options
                    </button>
                </div>
                <div class="left-searchbox left-panel mg-bot-20">
                    <div class="border-radius-top">Search Tours</div>
                    <div class="filters-search search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" class="search-box" placeholder="Type Tour Name" title="Search">
                    </div>
                </div>
                <div class="left-panel mg-bot-20">
                    <div class="border-radius-top">style</div>
                    <div class="filters search-box">
                        <ul class="list-group">
                            <li class="rfn-active-travel">
                                <div class="roundedOne">
                                    <label class="custom-check">
                                        Active Travel (388)
                                        <input type="checkbox" checked="checked">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="left-panel mg-bot-20">
                    <div class="border-radius-top">Responsible Benefits</div>
                    <div class="filters search-box">
                        <ul class="list-group">
                            <li class="rfn-honeymoon">
                                <div class="roundedOne">
                                    <label class="custom-check">
                                        Carbon Friendly (13)
                                        <input type="checkbox" checked="checked">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </li>
                            <li class="rfn-luxury">
                                <div class="roundedOne">
                                    <label class="custom-check">
                                        Cultural Interaction (49)
                                        <input type="checkbox" checked="checked">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </li>
                            <li class="rfn-nature-wildlife">
                                <div class="roundedOne">
                                    <label class="custom-check">
                                        Locals Benefit (5)
                                        <input type="checkbox" checked="checked">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </li>
                            <li class="rfn-short-trips">
                                <div class="roundedOne">
                                    <label class="custom-check">
                                        Making a Difference (18)
                                        <input type="checkbox" checked="checked">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </li>
                            <li class="rfn-undiscovered-asia">
                                <div class="roundedOne">
                                    <label class="custom-check">
                                        Social Impact (23)
                                        <input type="checkbox" checked="checked">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-12" id="showdatahotelt">
                <div class="row clearfix">
                    @foreach (var item in Model)
                    {
                        <div class="item-tour gray">
                            <div class="label-img"><img src="~/Content/images/icon-menu/exo-promo-corner.png"></div>
                            <a id="entry-2664" href="tour-detail.html" class="product-link" title=""></a>
                            <div class="wrap-tour line" id="test">
                                <img src="@item.Image" alt="">
                                <div class="btn-compare">
                                    <i class="fas fa-plus"></i>
                                </div>
                                <h4 class="text-center">
                                    <span class="country-name-list-hide">@item.Title</span>
                                    <span class="item-flag item-flag-grid">
                                        <i class="media-box-icon-country icon-flag-japan"></i>
                                    </span>
                                </h4>
                            </div>
                            <div class="item-content-h-1 line">
                                <div class="caption-h4">
                                    <p>@item.Title</p>
                                </div>
                            </div>
                            <div class="item-content col-md-12 line">
                                <ul class="details-tour">
                                    @Html.Raw(item.Description)
                                </ul>
                            </div>
                            <div class="item-content line">
                                <div class="view-share clearfix">
                                    <ul>
                                        <li><a href="/@menu.Alias/@item.ID/@item.Alias">View Tour</a></li>
                                        <li class="bt-share">
                                            <div class="box-share">
                                                <ul>
                                                    <li class="email"><a href="#"><i class="far fa-envelope icon-link-share"></i></a></li>
                                                    <li class="reddit"><a href="#"><i class="fab fa-reddit-alien icon-link-share"></i></a></li>
                                                    <li class="messenger"><a href="#"><i class="fab fa-facebook-messenger icon-link-share"></i></a></li>
                                                    <li class="facebook"><a href="#"><i class="icon-link-share fab fa-facebook-f"></i></a></li>
                                                    <li class="twitter"><a href="#"><i class="icon-link-share fab fa-twitter"></i></a></li>
                                                    <li class="linkedin"><a href="#"><i class="icon-link-share fab fa-linkedin-in"></i></a></li>
                                                    <li class="googleplus"><a href="#"><i class="icon-link-share fab fa-google-plus-g"></i></a></li>
                                                    <li class="pinterest"><a href="#"><i class="icon-link-share fab fa-pinterest"></i></a></li>
                                                    <li class="whatsapp"><a href="#"><i class="icon-link-share fab fa-whatsapp-square"></i></a></li>
                                                </ul>
                                            </div>
                                            <a href="#">Share<i class="fas fa-share-alt"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</section>
